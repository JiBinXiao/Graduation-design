<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.trs.rwsc.modules.book.dao.DangDang_BookDao" >
  <resultMap id="BaseResultMap" type="com.trs.rwsc.modules.book.entity.DangDang_Book" >
    <result column="id" property="id" jdbcType="INTEGER" />
  </resultMap>
  <resultMap id="ResultMapWithBLOBs" type="com.trs.rwsc.modules.book.entity.DangDang_Book" extends="BaseResultMap" >
    <result column="title" property="title" jdbcType="LONGVARCHAR" />
    <result column="prNow" property="prnow" jdbcType="LONGVARCHAR" />
    <result column="prPre" property="prpre" jdbcType="LONGVARCHAR" />
    <result column="author" property="author" jdbcType="LONGVARCHAR" />
    <result column="publish" property="publish" jdbcType="LONGVARCHAR" />
    <result column="desc1" property="desc1" jdbcType="LONGVARCHAR" />
    <result column="isbn" property="isbn" jdbcType="LONGVARCHAR" />
    <result column="link" property="link" jdbcType="LONGVARCHAR" />
  </resultMap>
  <sql id="Blob_Column_List" >
    title, prNow, prPre, author, publish, desc1, isbn, link
  </sql>
	<!-- 查询全部企业 -->
	<select id="findList" resultType="DangDang_Book">
		SELECT
			<include refid="Blob_Column_List"/>
		FROM db_python_dangdang 
	</select>
	
	<!-- 查询全部企业数目 -->
	<select id="findAllCount" resultType="long">
		SELECT
			COUNT(1)
		FROM db_python_dangdang 
	</select>
  
</mapper>